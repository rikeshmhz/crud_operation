<!DOCTYPE html>
<html lang="en">

<head>
    {{>headers}}
</head>

<body>
    {{>navbar}}
    <div class="container mt-5">
        <h1 class="text-center mb-3">User Details</h1>

        <div class="popup">
            <div class="content">
                <h4 class="text-center mb-3">User Details</h4>
                <div>
                    <p class="font-weight-normal">FirstName: <span id="firstname"></span></p>
                    <p class="font-weight-normal">LastName: <span id="lastname"></span></p>
                    <p class="font-weight-normal">Address: <span id="address"></span></p>
                    <p class="font-weight-normal">Phone: <span id="phone"></span></p>
                    <p class="font-weight-normal">Gender: <span id="gender"></span></p>
                </div>
                <button class="bg-primary rounded" id="popUpOK">OK</button>
            </div>
        </div>

        <table class="table">
            <thead>
                <tr>
                    <th>First Name</th>
                    <th>Last Name</th>
                    <th>Address</th>
                    <th>Phone</th>
                    <th>Gender</th>
                    <th class="text-center">Action</th>
                </tr>
            </thead>
            <tbody>
                {{#each data}}
                <tr class="viewDetails">
                    <td>{{first_name}}</td>
                    <td>{{last_name}}</td>
                    <td>{{address}}</td>
                    <td>{{phone}}</td>
                    <td>{{gender}}</td>
                    <td class="d-flex justify-content-evenly">
                        <a href="/updatePage?id={{_id}}"><button class="bg-warning rounded">Update</button></a>
                        <a class="delete" data-id="{{_id}}"><button class="bg-danger rounded">Delete</button></a>
                    </td>
                </tr>
                {{/each}}
            </tbody>
        </table>

    </div>

    <script src="js/code.jquery.com_jquery-3.7.0.min.js"></script>
    <script src="js/jQuery.js"></script>

</body>

</html>